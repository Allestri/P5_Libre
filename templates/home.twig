{% extends "layout.twig" %}


{% block content %}

<div class="row mt-5">
	<div class="col-lg-12">
		{% if not images %}
		<img id='home-image' class="img-thumbnail" src="images/pink-coast-wide.jpg" alt="pink-coast-brittany" height="auto" width="100%" title="Côte de granit Rose © Alexandre Lamoureux">
		{% else %}
          <div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
          	<div class="carousel-inner">
            <div class="carousel-item active">
              <img src="../uploads/photos/{{ images.0.filename }}" class="d-block carousel-photo" alt="...">
            </div>
            <div class="carousel-item">
              <img src="../uploads/photos/{{ images.1.filename }}" class="d-block carousel-photo" alt="...">
            </div>
            <div class="carousel-item">
              <img src="../uploads/photos/{{ images.2.filename }}" class="d-block carousel-photo" alt="...">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
       {% endif %}
	</div>
</div>

<div class="row">
    <section id="home-banner" class="col-lg-10 mx-auto">
    
    	<div class="row">
        	<div id="welcome-card" class="card col-lg-10 mx-auto">
        		<h1>Bienvenue</h1>
        		<div id="navigation-pills" class="mt-2">
            		<a href="#photograph"><div class="pill">Photographiez</div></a>
            		<a href="#send"><div class="pill">Envoyez</div></a>
            		<a href="#react"><div class="pill">Réagissez</div></a>
        		</div>
        	</div>
    	</div>
    	
    	    	
    	<div class="row mt-5">
    		
    		<div id="photograph" class="col-lg-12">
        		<div class="row justify-content-between ">
        			<div class="col-lg-5">
                		<div class="card" data-aos="fade-left" data-aos-duration="800">
                			<div class="card-header">
                				<h5>Photographiez</h5>
                			</div>
                			<div class="card-body">
                				<p class="text-muted">Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                				Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                			</div>
                		</div>
                	</div>
                	<div class="col-lg-3">
                		<div class="card hoverable px-4 py-4">
                			<div class="card-img-top">
                				<img src="images/icons/photograph.png" width="256px" height="auto" class="home-image-item" alt="camera-icon" title="Icon made by kiranshastry">
                			</div>
                    	</div>
                	</div>
            	</div>
        	</div>
        	
        	<div id="send" class="col-lg-12 mt-4">
        		<div class="row justify-content-between ">
                	<div class="col-lg-3">
                		<div class="card hoverable px-4 py-4">
                			<div class="card-img-top">
                				<img src="images/icons/file.png" width="256px" height="auto" class="home-image-item" alt="camera-icon" title="Icon made by kiranshastry">
                			</div>
                    	</div>
                	</div>
                	<div class="col-lg-5">
                		<div class="card" data-aos="fade-right" data-aos-duration="800">
                			<div class="card-header">
                				<h5>Envoyez, Partagez</h5>
                			</div>
                			<div class="card-body">
                    			<p class="text-muted">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                			</div>
                		</div>
                	</div>
            	</div>
        	</div>
        	
        	<div id="react" class="col-lg-12 mt-4">
        		<div class="row justify-content-between ">
        			<div class="col-lg-5">
                		<div class="card" data-aos="fade-left" data-aos-duration="800">
                			<div class="card-header">
                				<h5>Reagissez</h5>
                			</div>
                			<div class="card-body">
                				<p class="text-muted">Lorem Ipsum is simply dummy text of the printing and typesetting industry. 
                				Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                			</div>
                		</div>
                	</div>
                	<div class="col-lg-3">
                		<div class="card hoverable px-4 py-4">
                			<div class="card-img-top">
                				<img src="images/icons/chat.png" width="256px" height="auto" class="home-image-item" alt="camera-icon" title="Icon made by kiranshastry">
                			</div>
                    	</div>
                	</div>
            	</div>
        	</div>
        	       	
        	
        	
    	</div>
    	
    	
    	{% if recent %}
    	<div class="row mt-5">
    		<div class="col-lg-12 mt-5" data-aos="fade-up" data-aos-duration="900">
    			<h2>Posté récemment</h2>
    			<div class="row">
    			
    				{% for posts in recent %}
        			<div class="col-lg-4">
            			<div class="card">
            				<div class="card-header">
            					<h2>{{ posts.name }}</h2>
            				</div>
            				<img class="card-img-top" src="uploads/thumbnails/{{ posts.filename }}" />
            				<div class="card-body">
    							<p>{{ posts.content }}</p>
            				</div>
            				<div class="card-footer">
            					<i class="far fa-comments"></i> 7
                            	<i class="far fa-heart"></i> 128
            				</div>
            			</div>
            		</div>
            		{% endfor %}

    			</div>
    		</div>
    		
    	</div>
    	{% endif %}
    	<hr>
    </section>
</div>

<div class="row">
	<div id="footer2" class="col-lg-12">
		<a class="btn btn-primary home-inscription" href="{{ path_for('inscription') }}">S'inscrire !</a>
	</div>
</div>

