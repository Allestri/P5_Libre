{% extends "layout.twig" %}

{% block content %}
	<div class="col-lg-6">
    	<h2>Test final Upload Images + Exif</h2>
    	
    	{% if flash.success %}
    	<div class="alert alert-success">
    		{{ flash.success }}
    	</div>
    	{% endif %}
    	
    	{{ dump(flash.success) }}
    	
        <form method="post" action="upload" id="form" enctype="multipart/form-data">
            <div class="form-group">
                <label for="titre">Renommez votre image</label><br />
                <input type="text" class="form-control" name="name" placeholder="Titre du fichier" id="titre" required /><br />
            </div>
            <div class="form-group">
                <label for="myfile">Fichier</label><br />
                <input type="hidden" name="MAX_FILE_SIZE" value="10048576" />
                <input type="file" name="myfile" id="myfile" /><br />
            </div>
            <input type="submit" class="btn btn-primary" name="submit" value="Envoyer" />
        </form>
    </div>

{% endblock %}