                                        	<div class="com-logs-meta">
                                            	<div class="d-flex flex-row justify-content-between">
                                            		<h4>{{ logs.name }}</h4>
                                            		<button class="btn flipCross expandCom"><i class="fas fa-chevron-down"></i></button>
                                            	</div>
                                            	<div class="logs-header">
                                        			<span class="logs-date"><i class="far fa-clock mr-1"></i>{{ logs.com_date}}</span>
                                            		{% if logs.mod_type == 'M' %}
                        							<span class="badge badge-pill badge-info">Modifié</span>
                        						    {% else %}
                        						    <span class="badge badge-pill badge-danger">Supprimé</span>
                        						    {% endif %}
                                        		</div>
                                    		</div>
                            			
                            			</div>
                            			<div class="card-body">
                                        	<p title="Contenus original">{{ logs.old_content }}</p>
                                        	<!-- Card Collapse -->
                                        	<div class="com-logs-hidden collapse">
                                        		<hr>
                                        		<p class="text-muted text-center">Contenus moderé</h5>
                                        		<p title="Contenus moderé">{{ logs.new_content }}</p>
                                        		<p class="text-muted text-center"><small><i class="far fa-clock mr-1"></i>Moderé le {{ logs.mod_date }}</small></p>
                                        	</div>
                                    	</div>
                                	</div>
                            	</div>
                            	{% endfor %}
                            	
                            	
                        	</div>
                        	{% endif %}
        				</div>
        				<!-- End Logs Comments -->
    				</div>
            	</div>
