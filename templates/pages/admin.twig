                            				{% endif %}
                            				<div class="card-body">
                                        		<div class="logs-header d-flex align-items-center">
                                        			<h4 class="mb-0" title="titre original">{{ logs.old_name }}</h4>
                                        			<span class="logs-date"><i class="far fa-clock mr-1"></i>{{ logs.date }}</span>
                        						    <button class="btn expandPostButton flipCross"><i class="fas fa-chevron-down"></i></button>
                                        		</div>
                    						    <p title="Contenus original">{{ logs.old_content }}</p>
                                    		
                                    			<!-- Card Collapse -->
                    						    <div class="collapse">
                                    				<hr>
                                    				<h5 class="text-muted text-center">Contenus moderé</h5>
            										<p class="text-muted text-center"><small><i class="far fa-clock mr-1"></i>Moderé le {{ logs.mod_date }}</small></p>
                                    			</div>
    										</div>
                                		</div>
                                	</div>
                            		{% endif %}
                        		{% endfor %}
                        	
                        	
                        	</div>
                        	{% endif %} <!-- End deleted post logs -->
                        	{% endif %} <!-- End Logs Posts -->
                        	
        				</div>
        				<!-- End Logs Posts -->
        				
        				<!-- Logs Comments -->
        				<div id="logs-comments" class="tab-pane fade" role="tabpanel">
        				
        					{% if not logs_com %}
                    		<div class="alert alert-primary">
                                <i class="far fa-smile-wink"></i>
                                <span>Il n'y a pas d'historique de modération de commentaires</span>
                            </div>
                        	{% else %}
        					<div class="adm-tab-header mb-3">
        						<div class="alert alert-secondary">
                            		<i class="fa fa-history" aria-hidden="true"></i>
                            		<span>Historique de commentaires</span>
                                </div>
                                <a class="btn back-dashboard" title="Vider historique modération" href="admin/clear-logs/comments"><i class="fas fa-trash"></i></a>
                            </div>
                            
                        	<div class="row d-flex justify-content-between">
                        		
                        		{% for logs in logs_com %}
                            	<div class="col-lg-5 mb-5">
                            		<div class="card hoverable">
                            			<div class="com-logs-header">
                            				
                            				{% if logs.avatar_file == NULL %}
                                        	<img src="uploads/avatar/avatar_default.png" class="avatar-mini" alt="{{ logs.name }} avatar" height="60" width="auto">
                                        	{% else %}
                                        	<img src="uploads/avatar/{{ logs.name }}/{{ logs.avatar_file }}" class="avatar-mini rounded" alt="{{ logs.name }} avatar" height="60" width="auto">
