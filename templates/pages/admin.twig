{% extends "layout.twig" %}

{% block content %}

{{ include ('flash.twig') }}

<div class="row">
    	<div id="admin-panel" class="col-lg-12 mt-3" >
        	<div class="row" id="admin-header">
        		<div id="admin-avatar-container" class='col-lg-2 text-center'>
            		{% if session_avatar == 'no_avatar' %}
                	<img id="admin-avatar" src="uploads/avatar/avatar_default.png" alt="my-avatar" class="img-thumbnail" width="200" />
                	{% else %}
                	<img id="admin-avatar" src="uploads/avatar/{{ username }}/{{ session_avatar }}" alt="my-avatar" class="img-thumbnail" width="200" />
                	{% endif %}
                </div>
        		<div id="admin-title" class="col-lg-5">
            		<h1 class="mt-4">Administration</h1>
            	</div>
            </div>
            
            <div class="row">
            	<div id="admin-sidebar" class="col-lg-2 px-1 mt-5">

                	<nav id="admin-nav-container" class="navbar bg-light">
                		<ul id="admin-nav" class="nav nav-pills">
                			<li class="nav-item">
                				<a class="nav-link active" href="#dashboard-admin-tab" data-toggle="pill"><i class="fas fa-home fa-fw"></i>&nbsp; Tableau de bord</a>
                			<li class="nav-item">
                				<a class="nav-link" href="#reports-wrapper" data-toggle="pill"><i class="fas fa-flag fa-fw"></i>&nbsp; Signalements</a>
                			</li>
                			<li class="nav-item">
                				<a class="nav-link" href="#members-tab" data-toggle="pill"><i class="fas fa-users fa-fw"></i>&nbsp; Membres</a>
                			</li>
                			<li class="nav-item">
                				<a class="nav-link" href="#responsive-tab" data-toggle="pill"><i class="fas fa-history fa-fw"></i>&nbsp; Historique</a>
                			</li>
                			<li class="nav-item">
                				<a class="nav-link" href="#debug-tab" data-toggle="pill"><i class="fa fa-bug fa-fw" aria-hidden="true"></i>&nbsp; Debug</a>
                			</li>
                		</ul>
                	</nav>
                </div>
                <div class="col-lg-10 tab-content admin-tab">
            		<div id="dashboard-admin-tab" class="tab-pane fade show active" role="tabpanel">
            		
            		<!--  
            		<div class="row">
            			<div class="col-lg-6">
            				<div class="dashboard-title">
                				<i class="fas fa-tools"></i>
                				<h2>Outils</h2>
            				</div>
            				<div class="admin-hr"></div>
            			</div>
            			<div class="col-lg-6">
