{% extends "layout.twig" %}

{% block content %}



<div class="row">
    <div class="col-lg-2">
    	<div id="profile-wrapper">
    		<img src="images/avatar_default.png" class="rounded-circle" height="70px" width="70px" />
    	</div>
    	<nav class="navbar bg-light">
    		<ul class="navbar-nav">
    			<li class="nav-item">
    				<a class="nav-link" href="#">Dashboard</a>
    			</li>
    			<li class="nav-item">
    				<a class="nav-link" href="#">Placeholder</a>
    			</li>
    			<li class="nav-item">
    				<a class="nav-link" href="#">Placeholder</a>
    			</li>
    			<li class="nav-item">
    				<a class="nav-link" href="#">Placeholder</a>
    			</li>
    		</ul>
    	</nav>
    </div>
    <div id="reports-wrapper" class="col-lg-10">
	    {% if reportsNbr > 0 %}
        	<div class="alert alert-danger">
        		<i class="fas fa-exclamation-triangle"></i>
        		<span>Il y a {{ reportsNbr }} photos qui ont été reportées par la communauté</span>
        	</div>
        	<div id="img-report-wrapper" class="d-flex justify-content-around flex-row flex-wrap">
        	{% for images in reportedImgs %}
        		<div class="img-single-report">
        			<img class="image-reported" src="uploads/photos/{{ images.filename }}" />
        			<div class="img-info-panel">
        				<div class="alert alert-warning">Cette image a été reportée {{ images.reported }} fois</div>
        				<h2 class="card-title">{{ images.name }}</h2>
        				<p>Bonjour</p>
        			</div>
        		</div>
        	{% endfor %}
        	</div>
        	
        {% endif %}
	</div>
</div>
<div class="row">
	<div class="col-lg-10">
	    {{ dump(reportedImgs) }}
	</div>
</div>

{% endblock %}